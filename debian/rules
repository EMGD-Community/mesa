#!/usr/bin/make -f
%:
	dh $@ --buildsystem=autoconf --with autoreconf --parallel

override_dh_auto_configure:
	dh_auto_configure -- --enable-gles1 \
                             --enable-gles2 \
                             --with-egl-platforms=drm,x11 \
                             --enable-gbm \
                             --enable-gallium-gbm \
                             --enable-gallium-llvm \
                             --enable-glx-tls \
                             --enable-shared-glapi \
                             --enable-driglx-direct \
                             --with-dri-drivers=swrast \
                             --with-gallium-drivers=swrast \
                             --disable-openvg \
                             --disable-gallium-egl \
                             --disable-gallium-g3dvl

                             
override_dh_auto_test:
	echo "Skipping tests.."
	#dh_auto_test
